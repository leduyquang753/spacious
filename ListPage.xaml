<UserControl
	x:Class="Spacious.ListPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Spacious"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:data="using:Spacious"
	mc:Ignorable="d"
>
	<SplitView
		x:Name="MainSplitView"
		PaneBackground="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
		IsPaneOpen="True"
		OpenPaneLength="300"
		DisplayMode="Inline"
	>
		<SplitView.Pane>
			<ListView x:Name="ReminderList">
				<ListView.Header>
					<Grid ColumnDefinitions="*, Auto" Margin="16,8,16,8">
						<TextBlock
							Grid.Column="0"
							x:Uid="ListPage_ReminderList_Header"
							Style="{StaticResource TitleTextBlockStyle}"
						/>
						<Button
							Grid.Column="1"
							x:Uid="ListPage_Add"
							VerticalAlignment="Center"
							Click="onCreateCommand"
						>
							<FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE109;"/>
						</Button>
					</Grid>
				</ListView.Header>
				<ListView.ItemTemplate>
					<DataTemplate x:DataType="data:ReminderEntry">
						<TextBlock Text="{x:Bind name}" x:Phase="1" Margin="0,5,0,5"/>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</SplitView.Pane>
		<Frame x:Name="DetailsPane"/>
	</SplitView>
</UserControl>